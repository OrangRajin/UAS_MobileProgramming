<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment"
    android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="300dp"
       android:orientation="vertical"
       android:background="#3240a8">

   <de.hdodenhof.circleimageview.CircleImageView
       android:id="@+id/AccountImage"
       android:layout_width="150dp"
       android:layout_height="150dp"
       android:layout_gravity="center"
       android:layout_marginTop="45dp"
       android:scaleType="centerCrop"
       android:src="@drawable/kelinci"/>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:layout_gravity="center_horizontal"
       android:text="Angelique Aurielle A."
       android:textColor="@color/black"
       android:textStyle="bold"
       android:textSize="22sp"/>

   </LinearLayout>

   <LinearLayout
       android:layout_width="360dp"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_marginTop="20sp"
       android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingLeft="25dp"
          android:layout_marginTop="20dp"
          android:orientation="horizontal">

         <ImageView
             android:layout_width="24dp"
             android:layout_height="24dp"
             android:src="@drawable/baseline_email_"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:paddingLeft="20dp"
             android:text="aurielleangel.aa@gmail.com"
             android:layout_gravity="center_vertical"
             android:textStyle="bold"/>

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:paddingLeft="25dp"
          android:orientation="horizontal">

         <ImageView
             android:layout_width="24dp"
             android:layout_height="24dp"
             android:src="@drawable/baseline_phone"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:paddingLeft="20dp"
             android:text="+6288888888888"
             android:layout_gravity="center_vertical"
             android:textStyle="bold"/>

      </LinearLayout>

      <Button
          android:id="@+id/btn_letgo"
          android:layout_width="120dp"
          android:layout_height="50dp"
          android:layout_marginTop="150dp"
          android:layout_marginRight="130dp"
          android:layout_marginLeft="130dp"
          android:text="Logout"
          android:radius="20dp"
          android:textSize="15dp"
          android:textColor="#000000"
          android:backgroundTint="#FCFFB2"
          app:cornerRadius="30dp"
          android:onClick="Pindah"/>

   </LinearLayout>
</LinearLayout>